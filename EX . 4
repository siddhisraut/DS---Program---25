#include <iostream>
using namespace std;

int main() {

    cout << "Name  : Siddhi Sachin Raut\n";
    cout << "Roll No: 25\n";
    cout << "Class : S.Y. B. CSE\n\n";

    int n, choice;
    cout << "Enter size of an array: ";
    cin >> n;

    int i;
    int arr[n], temp[n];
    cout << "Enter elements:\n";
    for(i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "\n1. Bubble Sort";
    cout << "\n2. Selection Sort";
    cout << "\n3. Insertion Sort";
    cout << "\n4. Quick Sort";
    cout << "\nEnter your choice: ";
    cin >> choice;

    for(i = 0; i < n; i++) temp[i] = arr[i];

    if(choice == 1) {
        for(int i = 0; i < n-1; i++) {
            for(int j = 0; j < n-i-1; j++) {
                if(temp[j] > temp[j+1]) {
                    int t = temp[j];
                    temp[j] = temp[j+1];
                    temp[j+1] = t;
                }
            }
        }
        cout << "\nBubble Sort: ";
        for(i = 0; i < n; i++) cout << temp[i] << " ";
    }
    else if(choice == 2) {
        for(int i = 0; i < n-1; i++) {
            int minIndex = i;
            for(int j = i+1; j < n; j++) {
                if(temp[j] < temp[minIndex]) minIndex = j;
            }
            int t = temp[i];
            temp[i] = temp[minIndex];
            temp[minIndex] = t;
        }
        cout << "\nSelection Sort: ";
        for(i = 0; i < n; i++) cout << temp[i] << " ";
    }
    else if(choice == 3) {
        for(int i = 1; i < n; i++) {
            int key = temp[i];
            int j = i-1;
            while(j >= 0 && temp[j] > key) {
                temp[j+1] = temp[j];
                j--;
            }
            temp[j+1] = key;
        }
        cout << "\nInsertion Sort: ";
        for(i = 0; i < n; i++) cout << temp[i] << " ";
    }
    else if(choice == 4) {
        int low, high;
        int lStack[n], hStack[n];
        int top = -1;

        lStack[++top] = 0;
        hStack[top] = n-1;

        while(top >= 0) {
            low = lStack[top];
            high = hStack[top--];

            int pivot = temp[high];
            int i = low-1;
            for(int j = low; j < high; j++) {
                if(temp[j] < pivot) {
                    i++;
                    int t = temp[i];
                    temp[i] = temp[j];
                    temp[j] = t;
                }
            }
            int t = temp[i+1];
            temp[i+1] = temp[high];
            temp[high] = t;
            int p = i+1;

            if(p-1 > low) {
                lStack[++top] = low;
                hStack[top] = p-1;
            }
            if(p+1 < high) {
                lStack[++top] = p+1;
                hStack[top] = high;
            }
        }

        cout << "\nQuick Sort: ";
        for(i = 0; i < n; i++) cout << temp[i] << " ";
    }
    else {
        cout << "\nInvalid choice!";
    }

    return 0;
}
